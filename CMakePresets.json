{
    "version": 3,
    "cmakeMinimumRequired": {
	"major": 3,
	"minor": 21,
	"patch": 0
    },
    "configurePresets": [
	{
	    "name": "release",
	    "hidden": false,
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release",
		"CMAKE_CXX_STANDARD": "20"
	    }
	},
	{
	    "name": "debug",
	    "hidden": false,
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Debug",
		"CMAKE_CXX_STANDARD": "20"
	    }
	}
    ]
}
